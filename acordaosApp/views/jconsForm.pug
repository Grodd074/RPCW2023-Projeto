extends layout

block content
  .w3-card-4
    header.w3-container.w3-purple
      h1 Novo Acórdão

    form.w3-container(method="POST")
        fieldset
            legend Metadata
            label Processo
            input.w3-input.w3-round(type="text" name="processo")
            label Data do Acordão
            input.w3-input.w3-round(type="date" name="dataacordao")
            label Relator
            input.w3-input.w3-round(type="text" name="relator")
            label Descritores
            input.w3-input.w3-round(type="text" name="descritores")
            label Nº Convencional
            input.w3-input.w3-round(type="text" name="nconvencional")
            label Nº do Documento
            input.w3-input.w3-round(type="text" name="ndocumento")
            label Data de Entrada
            input.w3-input.w3-round(type="date" name="dataentrada")
            label Recorrente
            input.w3-input.w3-round(type="text" name="recorrente")
            label Recorrido 1
            input.w3-input.w3-round(type="text" name="recorrido1")
            label Votação
            input.w3-input.w3-round(type="text" name="votacao")
            label Área Temática 1
            input.w3-input.w3-round(type="text" name="areatematica1")
            label Texto Integral
            input.w3-input.w3-round(type="text" name="textointegral")
            label url
            input.w3-input.w3-round(type="text" name="url")
            label Tribunal
            input.w3-input.w3-round(type="text" name="tribunal" value="jcons" readonly)
            
        button.w3-btn.w3-purple.w3-mb-2(type="submit") Register

    footer.w3-container.w3-indigo
        p #[a(href="/") Voltar]
