extends layout

block content
  .w3-card-4
    header.w3-container.w3-brown
      h1 Novo Acórdão

    form.w3-container(method="POST")
        fieldset
            legend Metadata
            label Processo
            input.w3-input.w3-round(type="text" name="Processo")
            label Secção
            input.w3-input.w3-round(type="text" name="Secção")
            label Data do Acordão
            input.w3-input.w3-round(type="date" name="Data do Acordão")
            label Tribunal
            input.w3-input.w3-round(type="text" name="Tribunal")
            label Relator
            input.w3-input.w3-round(type="text" name="Relator")
            label Descritores
            input.w3-input.w3-round(type="text" name="Descritores")
            label Sumário
            input.w3-input.w3-round(type="text" name="Sumário")
            label Recorrente
            input.w3-input.w3-round(type="text" name="Recorrente")
            label Recorrido 1
            input.w3-input.w3-round(type="text" name="Recorrido 1")
            label Votação
            input.w3-input.w3-round(type="text" name="Votação")
            label Meio Processual
            input.w3-input.w3-round(type="text" name="Meio Processual")
            label Parecer Ministério Publico
            input.w3-input.w3-round(type="text" name="Parecer Ministério Publico")
            label Decisão Texto Integral
            input.w3-input.w3-round(type="text" name="Decisão Texto Integral")
            label url
            input.w3-input.w3-round(type="text" name="url")
            label Tribunal
            input.w3-input.w3-round(type="text" name="tribunal" value="jtcn" readonly)
            
        button.w3-btn.w3-green.w3-mb-2(type="submit") Register

    footer.w3-container.w3-brown
        p #[a(href="/") Voltar]
