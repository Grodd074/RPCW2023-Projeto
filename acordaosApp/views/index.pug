extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
        h1 Lista de Acordãos
    .w3-container
        each a in alista
            .w3-container
                .w3-card-4
                    .w3-container.w3-teal
                        h2 #[a(href="/acordaos/" + a.Id)= "Processo Nº" + a.Processo]
            
                    .w3-container
                        h2 #{a.Data}
                        p #{a.Tribunal}
                        if a.Descritores
                            .w3-container
                                p=a.Descritores.join(', ')