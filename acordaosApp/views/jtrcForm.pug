extends layout

block content
  .w3-card-4
    header.w3-container.w3-purple
      h1 Novo Acórdão

    form.w3-container(method="POST")
        fieldset
            legend Metadata
            label Processo
            input.w3-input.w3-round(type="text" name="Processo")
            label Nº Convencional
            input.w3-input.w3-round(type="text" name="Nº Convencional")
            label Relator
            input.w3-input.w3-round(type="text" name="Relator")
            label Descritores
            input.w3-input.w3-round(type="text" name="Descritores")
            label Data do Acordão
            input.w3-input.w3-round(type="date" name="Data do Acordão")
            label Votação
            input.w3-input.w3-round(type="text" name="Votação")
            label Tribunal Recurso
            input.w3-input.w3-round(type="date" name="Tribunal Recurso")
            label Texto Integral
            input.w3-input.w3-round(type="text" name="Texto Integral")
            label Meio Processual
            input.w3-input.w3-round(type="text" name="Meio Processual")
            label Decisão
            input.w3-input.w3-round(type="text" name="Decisão")
            label Legislação Nacional
            input.w3-input.w3-round(type="text" name="Legislação Nacional")
            label Decisão Texto Integral
            input.w3-input.w3-round(type="text" name="Decisão Texto Integral")
            label url
            input.w3-input.w3-round(type="text" name="url")
            label Tribunal
            input.w3-input.w3-round(type="text" name="tribunal" value="jtrc" readonly)
            
        button.w3-btn.w3-purple.w3-mb-2(type="submit") Register

    footer.w3-container.w3-indigo
        p #[a(href="/") Voltar]
